#include <stdio.h>

int main()
{
    float n1, n2, n3, n4, media;
    printf("Digite n1:\n");
    scanf("%f", &n1);
    printf("Digite n2:\n");
    scanf("%f", &n2);
    printf("Digite n3:\n");
    scanf("%f", &n3);
    printf("Digite n4:\n");
    scanf("%f", &n4);
    media = (n1 + n2 + n3 + n4) / 4;
    printf("MÃ©dia do aluno: %.2f\n", media);
    
    if (media >= 6) {
        printf("Aluno aprovado.\n");
    } else {
        printf("Aluno reprovado.\n");
    }

    return 0;
}
